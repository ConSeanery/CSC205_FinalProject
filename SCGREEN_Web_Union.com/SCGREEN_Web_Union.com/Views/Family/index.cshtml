@model IEnumerable<SCGREEN_Web_Union.com.Models.Family>

@{
    ViewBag.Title = "Families";
}
<div class="Page">
    <div class="centercontent">
        <h1>Families</h1>
        <nav>
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("People", "index", "Person")</li>
                <li>@Html.ActionLink("Families", "index", "Family")</li>
                <li>@Html.ActionLink("Create Member", "create", "Person")</li>
            </ul>
        </nav>  
        <table>
            <tr class="TableTitle"><td colspan=6>Families</td></tr>
            <tr><th>Name</th><th>Address</th><th>Zip Code</th><th>House Phone</th><th colspan="2">Edit</th></tr>
            @foreach (var family in Model)
            {
               <tr><td>@family.familyname</td><td>@family.address1, @family.city, @family.state</td><td>@family.zip</td><td>@family.homephone</td>
            <td class="editButton"><p>@Html.ActionLink("Delete", "delete", new { id = family.id })&nbsp;<br /></p></td>
            <td class="editButton"><p>@Html.ActionLink("Edit", "edit", new { id = family.id })</p></td></tr>//,
            }
        </table>
        <div class="createButton">     
            <p>@Html.ActionLink("Register Family", "create", "Family")</p>               
        </div>
    </div>
    <div class="contacts">
        <p>Contact Number: (619)306-9764</p>
        <p>Email: sam.green@geneva.edu</p>
    </div>
</div>

